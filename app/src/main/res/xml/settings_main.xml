<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_number_of_articles_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_number_of_articles_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_number_of_articles_label" />

    <ListPreference
        android:defaultValue="@string/settings_section_default"
        android:entries="@array/settings_section_label"
        android:entryValues="@array/settings_section_values"
        android:key="@string/settings_section_key"
        android:title="@string/settings_section_label" />

</PreferenceScreen>